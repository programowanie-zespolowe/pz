<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="masterWindow" stylesheets="@../stylesheets/scene.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MasterWindowController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <fx:include fx:id="topMenuButtons" source="topMenuButtons.fxml" />
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
      </HBox>
   </bottom>
   <right>
      <VBox BorderPane.alignment="CENTER" />
   </right>
   <left>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <fx:include fx:id="leftMenuButtons" source="leftMenuButtons.fxml" />
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <Pane fx:id="centerScrollPane" BorderPane.alignment="CENTER">
         <fx:include fx:id="centerMenuButtons" source="centerMenuButtons.fxml" />
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" />
         </BorderPane.margin>
      </Pane>
   </center>
</BorderPane>
