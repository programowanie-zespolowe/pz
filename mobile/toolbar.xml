<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:background="#C0CCDA">

    <Button
        android:id="@+id/menu_button"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="33.5dp"
        android:background="@drawable/ic_menu_black_24dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="366dp"
        android:layout_height="34.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97.75dp"
        android:layout_marginBottom="25.5dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8dp"
        android:text="@string/title_main_activity"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="484.25dp"
        android:layout_marginEnd="28.75dp"
        android:layout_marginBottom="33.5dp"
        android:background="@drawable/ic_search_black_24dp"
        app:layout_constraintEnd_toEndOf="parent" />
</RelativeLayout>